{% extends "base.html.twig" %}


{% block title %}AppBundle:one:vote{% endblock %}

{% block body %}
    {{ parent() }}
    <div class="container">

        <h1>Afficher un vote</h1>
        <h1>Title du vote : {{ vote.title }}</h1>
        <h2>Description ï¼š {{ vote.description }}</h2>
        <form method="post" role="form" class="form-horizontal">
            {% for candidature in candidatures %}
                <div class="col-lg-6" style="font-size: 20px">
                    {{ candidature.title }}
                </div>
                <div class="col-lg-6 note" style="margin: 10px">
                    <select class="col-lg-8 form-control" name="select[]">
                        {% for i in range(1,5) %}
                            <option class="col-lg-6" value="{{ i }}">{{ i }}</option>
                        {% endfor %}
                    </select>
                </div>
            {% endfor %}
            <input style="margin-top:10px; margin-bottom: 50px;" name="submitNote" type="submit" class="btn btn-lg btn-success btn-block form-control" value="Submit"/>
        </form>
    </div>
{% endblock %}
